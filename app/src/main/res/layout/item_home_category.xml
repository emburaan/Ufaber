<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.ufab.github.global.enumeration.State" />
        <variable
            name="viewModel"
            type="com.ufab.github.ui.dashboard.homefragment.HomeFragmentViewModel" />
        <variable
            name="activity"
            type="com.ufab.github.ui.dashboard.homefragment.HomeFragment" />
    </data>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_categoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16"
            android:text="Shop Name"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_basic" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            app:reverseLayout="false"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
</layout>
