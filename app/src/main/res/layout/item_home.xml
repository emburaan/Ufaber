<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="title"
            type="String" />
        <variable
            name="time"
            type="String" />
        <variable
            name="imageurl"
            type="String" />
        <variable
            name="onItemClickedListner"
            type="com.ufab.github.global.listener.OnItemClickedListener" />
        <variable
            name="placeholder"
            type="android.graphics.drawable.Drawable" />
        <variable
            name="picasso"
            type="com.squareup.picasso.Picasso" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:onClick="@{(view)->onItemClickedListner.onItemClicked(title)}"
    android:background="@drawable/cornered_drawable"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cornered_drawable">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/dimen_250"
        android:layout_height="@dimen/dimen_170"
        android:src="@drawable/core"
        app:imageUrl="@{imageurl}"
        app:placeholder="@{placeholder}"
        picasso="@{picasso}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/txt_view"
        android:paddingStart="@dimen/dimen_10"
        android:paddingEnd="@dimen/dimen_10"
        android:text="@{time}"
        android:textColor="@color/gray_cloud"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/txt_view"
        android:paddingStart="@dimen/dimen_10"
        android:paddingEnd="@dimen/dimen_10"
        android:text="@{title}"
        android:textColor="@color/gray_cloud"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
